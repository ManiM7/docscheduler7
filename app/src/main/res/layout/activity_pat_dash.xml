<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3FA"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".Pat_dash_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DFF2FF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp">


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="44dp"
                    android:layout_height="43dp"
                    android:src="@drawable/menu"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Find our Specialist"
                android:textAlignment="center"
                android:textColor="#016DF7"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextPersonal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edittext_search_bg"
                android:drawableStart="@drawable/search1"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Search Doctor..."
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:textStyle="italic" />

            <!-- Category Section -->


            <!-- Popular Doctors Section -->

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Category 1 -->
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_category1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_1" />

                        <TextView
                            android:id="@+id/textViewCategory1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cardiology"
                            android:textAlignment="center"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <!-- Category 2 -->
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_category1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_2" />

                        <TextView
                            android:id="@+id/textViewCategory2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pulmonologist"
                            android:textAlignment="center"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <!-- Category 3 -->
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_category1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_3" />

                        <TextView
                            android:id="@+id/textViewCategory3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Neurology"
                            android:textAlignment="center"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <!-- category 4 -->
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_category1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/teeth2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:src="@drawable/teeth2" />

                        <TextView
                            android:id="@+id/textViewCategory4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dentist"
                            android:textAlignment="center"
                            android:textColor="@color/black" />
                    </LinearLayout>


                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textViewPopularDoctors"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Popular Doctors"
                    android:textColor="#016DF7"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewSeeAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See all"
                    android:textAlignment="viewEnd"
                    android:textColor="#A9A9A9"
                    android:textStyle="bold" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F3FA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

            <!-- Doctor Information Section 1 -->

                    <!-- Doctor Information Section 2 -->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="32dp"
                        android:background="@drawable/pick_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewDoctor1"
                            android:layout_width="60dp"
                            android:layout_height="63dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:src="@drawable/doc_1" />

                        <TextView
                            android:id="@+id/textViewDoctorName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Dr. Jack"
                            android:textColor="@color/black"
                            android:textSize="21sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textViewSpecialization1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gynecologist and surgeon"
                            android:textColor="#26273a"
                            android:textSize="15sp" />
                        <Button
                            android:id="@+id/textViewAppointment1"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="bottom"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/btn_1"
                            android:gravity="center"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:text="Book now"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="32dp"
                        android:layout_weight="1"
                        android:background="@drawable/pick_bg"
                        android:orientation="horizontal">

                <TextView
                    android:id="@+id/doc2time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="9:00 AM-2.30 PM"
                    android:textColor="#004D74"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageViewClock2"
                    android:layout_width="16dp"
                    android:layout_height="25dp"
                    android:src="@drawable/clock" />

                <ImageView
                    android:id="@+id/imageViewDoctor2"
                    android:layout_width="60dp"
                    android:layout_height="63dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/doc_2" />

                <TextView
                    android:id="@+id/textViewDoctorName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Dr. Andy"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewSpecialization2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neurologist"
                    android:textColor="#26273a"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textViewAppointment2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/btn_1"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="Appointment"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Doctor Information Section 3 -->
            <!-- Replace with LinearLayout as needed -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/pick_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/doc3time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="9:00 AM-5.00 PM"
                    android:textColor="#004D74"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageViewClock3"
                    android:layout_width="16dp"
                    android:layout_height="25dp"
                    android:src="@drawable/clock" />

                <ImageView
                    android:id="@+id/imageViewDoctor3"
                    android:layout_width="60dp"
                    android:layout_height="63dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/doc_3" />

                <TextView
                    android:id="@+id/textViewDoctorName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Dr. William"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewSpecialization3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pediatrician"
                    android:textColor="#26273a"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textViewAppointment3"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/btn_1"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="Appointment"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Repeat the above layout for additional doctor information sections -->

        </LinearLayout>
    </ScrollView>
</LinearLayout>
